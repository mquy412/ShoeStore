<script>

	function LoadData() {
		var selectedValue = $('#shoesSelect').val();
		$.ajax({
			url: '/Home/GetShoesByID',
			method: 'GET',
			data: { maGiay: selectedValue },
			success: function (shoe) {
				console.log(shoe)
				$('#singlequantity').attr('max', shoe.soLuong);
				$('#shoesavailable').text(shoe.soLuong + ' pieces available');
			},
			error: function () {
				alert('Failed to load shoe data');
			}
		});
	}

	function AddShoesToCart(){
		var cartID = '@UserContext.MaGioHang';
		var shoeID = $('#shoesSelect').val();
		var quantity = $('#singlequantity').val();

		console.log(cartID);
		console.log(shoeID);
		console.log(quantity);

		if (cartID == null || cartID === undefined || cartID == "") {
			alert('Đăng nhập trước khi thêm vào giỏ hàng');
			window.location.href = 'https://localhost:7294/Access/Login';
			return;
		}

		if (quantity == null || quantity === undefined || quantity == "") {
			alert('Số lượng phải lớn hơn 0');
			return;
		}

		$.ajax({
			url: '@Url.Action("AddToCart", "Cart")',
			method: 'POST',
			data: {
				maGioHang: cartID,
				maGiay: shoeID,
				soLuong: quantity
			},
			success: function () {
				alert("Thêm vào giỏ hàng thành công");
			},
			error: function () {
				alert('Đăng nhập trước khi thêm vào giỏ hàng');
			}
		});
	}
</script>